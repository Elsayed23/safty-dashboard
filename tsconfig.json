{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/(auth)/login/page.jsx",
    "app/(dashboard)/(routes)/instruments/page.jsx",
    ".next/types/app/(dashboard)/(routes)/trainings/page.tsx",
    "app/(dashboard)/(routes)/instruments/[instrumentId]/_components/ImagesSlider.jsx",
    "app/(dashboard)/(routes)/trainees/page.jsx",
    "app/(dashboard)/(routes)/violations/[violationId]/page.tsx",
    "app/(dashboard)/(routes)/users/page.jsx"
  ],
  "exclude": [
    "node_modules"
  ]
}